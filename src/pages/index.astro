---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const latestArticles = (await getCollection('articles'))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<BaseLayout
  title="hgaruna - Desarrollo Web Profesional y Marketing Digital"
  description="Tu aliado en desarrollo web profesional y marketing digital. Creamos soluciones a medida para potenciar tu presencia online."
  keywords="Desarrollo web, Diseño de páginas web, Creación de sitios web, Mantenimiento web, Soporte técnico web, Sitio web profesional, Página web personalizada, Diseño web atractivo, Presencia en línea, Solución web completa, Marketing digital, Gestión de redes sociales"
  ogTitle="hgaruna: Lanza tu Web Profesional - Marketing y Redes Sociales"
  ogDescription="En hgaruna diseñamos y desarrollamos tu sitio web profesional, ofrecemos soluciones integrales de marketing digital y gestión de redes sociales. ¡Conéctate con nosotros y lleva tu negocio al siguiente nivel!"
  ogImage="https://service.hgaruna.org/logos-he-imagenes/logo3.png"
  ogUrl="https://service.hgaruna.org/"
  twitterTitle="hgaruna: Web, Marketing y Redes para tu Éxito"
  twitterDescription="Con hgaruna, obtén un sitio web profesional y soluciones de marketing digital y redes sociales. Expertos en potenciar tu negocio online."
  twitterImage="https://service.hgaruna.org/logos-he-imagenes/logo3.png"
  twitterUrl="https://service.hgaruna.org/"
>
  <section class="hero-section">
    <div class="hero-background">
      <div class="hero-overlay"></div>
    </div>
    <div class="hero-content">
      <h1 class="hero-title">hgaruna: Desarrollo Web y Presencia Digital</h1>
      <p class="hero-subtitle">Creamos experiencias digitales únicas con React, JavaScript y tecnologías modernas</p>
      <div class="hero-cta">
        <a href="/planes/" class="cta-button primary">Ver Planes</a>
        <a href="#tech-stack" class="cta-button secondary">Tecnologías</a>
      </div>
    </div>
  </section>

  <!-- Sección de los Últimos Artículos del Blog -->
  <section class="blog-section">
    <div class="container">
      <div class="blog-header">
        <h2 class="blog-title-main">Últimos Artículos</h2>
        <p class="blog-description">Mantente al día con nuestras últimas publicaciones sobre desarrollo web y marketing digital.</p>
      </div>
      <div class="blog-grid">
        {
          latestArticles.map((article) => (
            <a href={`/blog/${article.slug}/`} class="blog-card">
              <div class="blog-image-container">
                <img src={article.data.image} alt={article.data.title} class="blog-image"/>
              </div>
              <div class="blog-content">
                <span class="blog-category">{article.data.category}</span>
                <h2 class="blog-title">{article.data.title}</h2>
                <p class="blog-excerpt">{article.data.description}</p>
                <div class="blog-footer">
                  <span class="blog-date">{article.data.date.toLocaleDateString()}</span>
                  <span class="blog-read-more">Leer más →</span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Información de Contacto -->
        <div class="contact-info">
          <h2>Información de Contacto</h2>
          <div class="info-items">
            <div class="info-item">
              <i class="fas fa-phone"></i>
              <div class="info-content">
                <h3>Teléfono</h3>
                <p><a href="tel:+543541237972" style="list-style: none; text-decoration: none; color: aliceblue;"
                  >+54 3541 237972</a
                ></p>
              </div>
            </div>
            <div class="info-item">
              <i class="fas fa-envelope"></i>
              <div class="info-content">
                <h3>Email</h3>
                <p><a href="mailto:23sarmiento@gmail.com" style="list-style: none; text-decoration: none; color: aliceblue;"
                  >23sarmiento@gmail.com</a
                ></p>
              </div>
            </div>
            <div class="info-item">
              <i class="fas fa-map-marker-alt"></i>
              <div class="info-content">
                <h3>Ubicación</h3>
                <p>Villa Carlos Paz, Córdoba, Argentina</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Formulario de Contacto -->
        <div class="contact-form-container">
          <h2>Envíanos un Mensaje</h2>
          <form action="https://formspree.io/f/mkgoqyjo" method="POST">
            <div class="form-group">
              <label for="name">Nombre *</label>
              <input type="text" id="name" name="name" class="form-control" required />
            </div>
            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="_replyto" class="form-control" required />
            </div>
            <div class="form-group">
              <label for="phone">Teléfono (Opcional)</label>
              <input type="tel" id="phone" name="phone" class="form-control" />
            </div>
            <div class="form-group">
              <label for="message">Tu Mensaje *</label>
              <textarea id="message" name="message" rows="5" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar Mensaje</button>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 