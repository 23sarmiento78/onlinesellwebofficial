---
import { getCollection } from 'astro:content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';

const articles = await getCollection('articles');
// Opcional: Ordenar los artículos por fecha, del más reciente al más antiguo
articles.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---
<ArticleLayout
  title="Blog - Artículos de Online Sell Web"
  description="Explora nuestros artículos sobre estrategias de marketing digital, SEO, desarrollo web y más para impulsar tu negocio online."
  url={Astro.url.toString()}
>
  <main class="article-section">
    <div class="container">
      <h1 class="page-title text-center my-5">Nuestros Artículos</h1>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {articles.map((article) => (
          <div class="col">
            <div class="card h-100 shadow-sm">
              {article.data.image && (
                <img src={article.data.image} class="card-img-top" alt={article.data.title} />
              )}
              <div class="card-body">
                <h5 class="card-title">{article.data.title}</h5>
                <p class="card-text">{article.data.description}</p>
              </div>
              <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  <i class="far fa-calendar-alt"></i> {new Date(article.data.date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}</small>
                <a href={`/blog/${article.slug}/`} class="btn btn-sm btn-primary">Leer más</a>
              </div>
            </div>
          </div>
        ))}
      </div>
      {articles.length === 0 && (
        <p class="text-center my-5">Todavía no hay artículos publicados. ¡Crea el primero desde el CMS!</p>
      )}
    </div>
  </main>
</ArticleLayout> 